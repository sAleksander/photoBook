<Page x:Class="PhotoBook.View.EditorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhotoBook.View"
      mc:Ignorable="d"
      DataContext="{Binding Source={StaticResource Locator}, Path=Editor}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditorView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Frame Grid.Column="0" Content="{Binding SettingsViewModel}"/>

        <StackPanel Grid.Column="1">
            <Frame Content="{Binding BookViewModel}"/>
            <Button Content="FrontCoverSettings" Command="{Binding ShowFrontCoverSettings}"/>
            <Button Content="BackCoverSettings" Command="{Binding ShowBackCoverSettings}"/>
            <Button Content="PagesSettings" Command="{Binding ShowPagesSettings}"/>
        </StackPanel>
    </Grid>
</Page>
