<Page x:Class="PhotoBook.View.FrontCoverSettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhotoBook.View"
      DataContext="{Binding Source={StaticResource Locator}, Path=FrontCoverSettings}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="FrontCoverSettingsView">

    <Grid Background="Transparent" Margin="10,30,0,0">
        <StackPanel CanVerticallyScroll="True">
            <Button Content="Zmień tytuł" 
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    BorderBrush="White" 
                    Background="Transparent"
                    FontSize="25" Foreground="White" FontFamily="Segoe UI Light" 
                    Height="50">
                <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
                </Button.Resources>
            </Button>
            <Button Content="Zmień motyw"
                    VerticalAlignment="Top" 
                    HorizontalContentAlignment="Left"
                    BorderBrush="White" 
                    Foreground="White" FontFamily="Segoe UI Light"  FontSize="25px"
                    Background="Transparent" 
                    Height="50"
                    Margin="0,1,0,1"/>
            <StackPanel Background="Transparent">
                <Button Content="Kolor"
                        HorizontalContentAlignment="Left"
                        Background="Transparent" 
                        BorderBrush="Transparent"
                        Foreground="White" FontFamily="Segoe UI Light" FontSize="20px"
                        Height="40"
                        Margin="40,0,0,0"/>
                <Button Content="Motyw 1"  
                        Background="Transparent" 
                        BorderBrush="Transparent"
                        Foreground="White" FontFamily="Segoe UI Light" FontSize="20px" 
                        Height="40"
                        Margin="40,0,0,0" HorizontalContentAlignment="Left"/>
                <Button Content="Motyw 2" 
                        VerticalAlignment="Top" 
                        Background="Transparent" 
                        BorderBrush="Transparent"
                        Foreground="White" FontFamily="Segoe UI Light"  FontSize="20px"
                        Height="40"
                        Margin="40,0,0,0" HorizontalContentAlignment="Left"/>
                <Button Content="Motyw 3" 
                        VerticalAlignment="Top" 
                        Background="Transparent" 
                        BorderBrush="Transparent"
                        Foreground="White" FontFamily="Segoe UI Light"  FontSize="20px"
                        Height="40"
                        Margin="40,0,0,0" HorizontalContentAlignment="Left"/>
        </StackPanel>
        <Button Content="Zmień podtytuł" 
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    BorderBrush="White" 
                    Background="Transparent" 
                    Foreground="White" FontFamily="Segoe UI Light" FontSize="25px"
                    Height="50"
                    Margin="0,1,0,1">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>
            </Button>
            <Button Content="Zmień czcionkę" 
                    VerticalAlignment="Top" 
                    HorizontalContentAlignment="Left"
                    BorderBrush="White" 
                    Background="Transparent" 
                    Foreground="White" FontFamily="Segoe UI Light"  FontSize="25px"
                    Height="50"
                    Margin="0,1,0,1">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>
