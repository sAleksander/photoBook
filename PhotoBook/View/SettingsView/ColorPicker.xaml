<UserControl x:Class="PhotoBook.View.SettingsView.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoBook.View.SettingsView" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel IsEnabled="True" Name="colorPickerStackPanel" Margin="45,0,10,0">
        <Label Content="Wybierz kolor" FontSize="14px" Margin="5,0,0,0"/>
        <xctk:ColorPicker x:Name="colorPicker"
                          DropDownBackground="#e8e8e8"
                          AvailableColorsSortingMode="HueSaturationBrightness"
                          SelectedColorChanged="ColorPicker_SelectedColorChanged"
                          Margin="0,0,0,10" />
    </StackPanel>
</UserControl>
