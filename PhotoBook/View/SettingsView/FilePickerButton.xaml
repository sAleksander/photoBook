<UserControl x:Class="PhotoBook.View.SettingsView.FilePickerButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoBook.View.SettingsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Name="PickFileButton"
            Content="{Binding ButtonContent, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
            Style="{Binding ButtonStyle, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
            Click="PickFileButton_Click"/>
</UserControl>
